<% if (typeof messages !== 'undefined') { const __msgHtml = messages(); if (__msgHtml && __msgHtml.toString().trim()) { %>
  <div class="messages">
    <%- __msgHtml %>
  </div>
<% } } %>
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<h1><%= title %></h1>

<div class="login-container">
  <form method="post" action="/account/login" class="login-form">
    <div class="form-group">
      <label for="email">Email Address (Username):</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        required 
        placeholder="Enter your email address"
      />
    </div>

    <div class="form-group">
      <label for="password">Password:</label>
      <input 
        type="password" 
        id="password" 
        name="password" 
        required 
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        placeholder="Enter your password"
      />
    </div>

    <button type="submit" class="btn-login">Sign In</button>
  </form>

  <div class="registration-link">
    <p>Don't have an account? <a href="/account/register">Register here</a></p>
  </div>
</div>
